{
  "manifest_version": 2,
  "name": "Gmail Claude Assistant",
  "version": "1.4.0",
  "description": "Chat with Claude while composing emails in Gmail",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "identity",
    "https://api.anthropic.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "web_accessible_resources": ["sidebar.css"],
  "browser_specific_settings": {
    "gecko": {
      "id": "gmail-claude@extension",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
